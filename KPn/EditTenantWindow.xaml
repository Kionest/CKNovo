<Window x:Class="KPn.EditTenantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Редактирование клиента" Height="750" Width="420"
        WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="20">

            <TextBlock Text="Редактирование клиента" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="ФИО / Название"/>
            <TextBox x:Name="FullNameBox" Height="50"/>

            <TextBlock Text="Телефон" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox" Height="50"/>

            <TextBlock Text="Email" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailBox" Height="50"/>

            <TextBlock Text="Юридический адрес" Margin="0,10,0,0"/>
            <TextBox x:Name="AddressBox" Height="50"/>

            <TextBlock Text="ИНН" Margin="0,10,0,0"/>
            <TextBox x:Name="InnBox" Height="50"/>

            <TextBlock Text="Директор" Margin="0,10,0,0"/>
            <TextBox x:Name="DirectorBox" Height="50"/>

            <TextBlock Text="Заметки" Margin="0,10,0,0"/>
            <TextBox x:Name="NotesBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Width="100" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Сохранить" Width="120" Click="Save_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
