<Window x:Class="KPn.EditContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Редактирование договора" Height="700" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование договора" FontSize="20" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Номер договора"/>
            <TextBox x:Name="NumBox" Height="42"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Объект недвижимости"/>
            <ComboBox x:Name="RealtyBox" Height="28"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="Арендатор"/>
            <ComboBox x:Name="TenantBox" Height="28"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock Text="Статус договора"/>
            <ComboBox x:Name="StatusBox" Height="28"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0">
            <StackPanel Width="220">
                <TextBlock Text="Дата начала"/>
                <DatePicker x:Name="StartDatePicker"/>
            </StackPanel>

            <StackPanel Width="220" Margin="20,0,0,0">
                <TextBlock Text="Дата окончания"/>
                <DatePicker x:Name="EndDatePicker"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,20,0,0">
            <TextBlock Text="Аренда (₽/мес)"/>
            <TextBox x:Name="RentBox" Height="41"/>

            <TextBlock Text="Депозит" Margin="0,10,0,0"/>
            <TextBox x:Name="DepositBox" Height="46"/>

            <TextBlock Text="День платежа" Margin="0,10,0,0"/>
            <TextBox x:Name="DueDayBox" Height="37" Width="98"/>

            <Button Content="Сохранить изменения" Height="35" Foreground="White" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
