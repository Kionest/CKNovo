<Window x:Class="KPn.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Генератор договоров" Height="420" Width="720">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="Шаблон:" Margin="0,0,8,0" />
            <ComboBox x:Name="TemplateCombo" Width="200" SelectedIndex="0">
                <ComboBoxItem>Individual</ComboBoxItem>
                <ComboBoxItem>Entity</ComboBoxItem>
            </ComboBox>


            <Button x:Name="RefreshBtn" Content="Обновить список контрактов" Margin="16,0,0,0" Click="RefreshBtn_Click" />
        </StackPanel>


        <DataGrid x:Name="ContractsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ContractID}" Width="60" />
                <DataGridTextColumn Header="Номер" Binding="{Binding ContractNumber}" Width="*" />
                <DataGridTextColumn Header="Арендатор" Binding="{Binding Tenants.FullName}" Width="150" />
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate, StringFormat=d}" Width="110" />
                <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate, StringFormat=d}" Width="110" />
                <DataGridTextColumn Header="Ежемесячная" Binding="{Binding MonthlyRent}" Width="110" />
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="GenerateBtn" Content="Сгенерировать DOCX" Width="160" Click="GenerateBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
