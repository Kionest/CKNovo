<Window x:Class="KPn.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Панель администратора" 
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="AdminPanel1">

            <TextBlock Text="⚙ Панель администратора" FontSize="24" FontWeight="Bold" Margin="20,10,20,20"/>

            <!--Карточки-->
            <Grid Margin="20,10,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Всего пользователей" FontSize="14" Foreground="#555"/>
                        <TextBlock x:Name="TotalUsersText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="ActiveUsersText" Text="Активных: 0" FontSize="12" Foreground="#2A6FDB" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Роли в системе" FontSize="14" Foreground="#555"/>
                        <StackPanel x:Name="RolesStatsPanel" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Новые пользователи" FontSize="14" Foreground="#555"/>
                        <TextBlock x:Name="UsersMonthText" Text="За месяц: 0" FontSize="12" Foreground="#FF9800" Margin="0,8,0,0"/>
                        <TextBlock x:Name="UsersWeekText" Text="За неделю: 0" FontSize="12" Foreground="#2A6FDB"/>
                        <TextBlock x:Name="UsersTodayText" Text="Сегодня: 0" FontSize="12" Foreground="Green" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <TextBlock Grid.Row="0" Text="Управление пользователями" FontSize="18" FontWeight="Bold" Margin="20,0,20,10"/>
            
            <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" CanUserAddRows="False" Margin="20,0,20,10" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserID}" Width="60"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="150"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="150"/>

                    <DataGridTemplateColumn Header="Действия" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Удалить" Click="BtnDeleteUser_Click" Background="DarkRed" Foreground="White" Padding="6,3" Margin="2" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Border Margin="20,0,20,10" Padding="15" Background="#FAFAFA" CornerRadius="12" BorderBrush="#D0D0D0" BorderThickness="1">

                <StackPanel>
                    <TextBlock Text="Добавить пользователя"  FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtNewLogin" Height="30" Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Пароль:" VerticalAlignment="Center" Margin="5,0,5,5"/>
                        <PasswordBox Grid.Row="0" Grid.Column="4" x:Name="txtNewPassword" Height="30" Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Роль:" VerticalAlignment="Center" Margin="0,0,5,0"/>

                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbRoles" DisplayMemberPath="Name" Height="30"/>

                        <Button Grid.Row="1" Grid.Column="4" Content="Добавить пользователя" Click="BtnAddUser_Click" Padding="10,5" Height="32" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>
            <TextBlock Grid.Row="3" x:Name="txtMessage" Margin="0,10,0,0" TextWrapping="Wrap" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
