<Window x:Class="KPn.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="720" Width="1250">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39.3"/>
            <ColumnDefinition Width="16.8"/>
            <ColumnDefinition Width="163.9"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#F0F0F0" Grid.ColumnSpan="3">

            <Label Content="CKNova" FontSize="18" FontWeight="Bold"/>

            <Canvas Margin="10,20,10,500">
                <Button x:Name="BtnObjects" Content="🏢 Объекты" Click="MenuButton_Click" Tag="0" Canvas.Left="31" Canvas.Top="17" Height="30" Width="137"/>
                <Button x:Name="BtnClients" Content="👥 Клиенты" Click="MenuButton_Click" Tag="1" Canvas.Left="31" Canvas.Top="60" Height="30" Width="137"/>
                <Button x:Name="BtnContracts" Content="📄 Договоры" Click="MenuButton_Click" Tag="2" Canvas.Left="31" Canvas.Top="99" Height="30" Width="137"/>
                <Button x:Name="BtnMap" Content="🏠 Cобственники" Click="MenuButton_Click" Tag="3" Canvas.Left="31" Canvas.Top="144" Height="30" Width="137"/>

                <Button Content="😨" FontSize="20" Style="{StaticResource ActionButtonStyle}" Width="36" Height="31" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AboutDeveloper_Click" Canvas.Left="165" Canvas.Top="544"/>

                <Canvas Background="White">
                    <Line X1="0" Y1="50" X2="250" Y2="50" Stroke="Gray" StrokeThickness="2" Canvas.Left="-9" Canvas.Top="-58" HorizontalAlignment="Left" VerticalAlignment="Center" Width="218"/>
                </Canvas>

                <Canvas Background="White">
                    <Line X1="0" Y1="50" X2="250" Y2="50" Stroke="Gray" StrokeThickness="2" Canvas.Left="-9" Canvas.Top="530" HorizontalAlignment="Center" VerticalAlignment="Top" Width="218"/>
                </Canvas>

                <Button Content="🚪 Выйти" Style="{StaticResource ActionButtonStyle}" Click="ExitButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-3" Canvas.Top="587" Width="76"/>
            </Canvas>
        </StackPanel>

        <Grid Grid.Column="3" Margin="15,15,15,15">

            <!-- Объекты -->
            <StackPanel x:Name="ObjectsPanel" Visibility="Collapsed">

                <TextBlock Text="🏢 Управление объектами"  FontSize="24" FontWeight="Bold" Margin="20,10,20,20"/>

                <StackPanel Orientation="Horizontal" Margin="20,0,20,20">
                    <Button Content="➕ Добавить объект" Style="{StaticResource ActionButtonStyle}" Width="150" Click="AddRealtyButton_Click"/>
                    <Button Content="✏️ Редактировать" Style="{StaticResource ActionButtonStyle}" Width="134" Click="EditRealtyButton_Click"/>
                    <Button Content="🗑️ Удалить" Style="{StaticResource ActionButtonStyle}" Width="100" RenderTransformOrigin="0.5,0.5" Click="DeleteButton_Click"/>
                </StackPanel>

                <Grid Margin="20,10,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Всего объектов" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="TotalRealtyText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="ActiveRealtyText" Text="Активные: 0 (0%)" FontSize="12" Foreground="#2A6FDB"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Собственные объекты" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="OwnedRealtyText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="OwnedPercentText" Text="Процент собственных: 0%" FontSize="12" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Объекты по собственникам" FontSize="14" Foreground="#555"/>
                            <StackPanel x:Name="OwnersStatsPanel" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <StackPanel Margin="20,0,20,10">

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">

                        <StackPanel>
                            <TextBlock Text="Поиск по адресу" FontSize="12" Margin="0,0,0,3"/>
                            <TextBox x:Name="RealtySearchBox" Width="750" Height="45" Margin="0,0,20,0" TextChanged="RealtyFilters_Changed"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Статус" FontSize="12" Margin="0,0,0,3"/>
                            <ComboBox x:Name="StatusFilter" Width="150" Height="32" SelectionChanged="RealtyFilters_Changed">
                                <ComboBoxItem Content="Все" IsSelected="True"/>
                                <ComboBoxItem Content="Активные"/>
                                <ComboBoxItem Content="Неактивные"/>
                                <ComboBoxItem Content="Собственные"/>
                                <ComboBoxItem Content="Несобственные"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <DataGrid x:Name="RealtyGrid" Margin="20" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding RealtyID}" Width="60"/>
                        <DataGridTextColumn Header="Владелец" Binding="{Binding Owners.FullName}" Width="200"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding RealtyTypes.TypeName}" Width="150"/>
                        <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="250"/>
                        <DataGridTextColumn Header="Площадь" Binding="{Binding SquareMeters}" Width="120"/>
                        <DataGridTextColumn Header="Этаж" Binding="{Binding Floor}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Собственность" Binding="{Binding IsOwned}" Width="130"/>
                        <DataGridCheckBoxColumn Header="Активно" Binding="{Binding IsActive}" Width="100"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Клиенты -->
            <StackPanel x:Name="ClientsPanel" Visibility="Collapsed">
                <TextBlock Text="👥 Управление клиентами" FontSize="24" FontWeight="Bold" Margin="20,10,20,20"/>

                <StackPanel Orientation="Horizontal" Margin="20,0,20,20">
                    <Button Content="➕ Добавить клиента" Style="{StaticResource ActionButtonStyle}" Width="150" Click="AddTenantButton_Click"/>
                    <Button Content="✏️ Редактировать" Style="{StaticResource ActionButtonStyle}" Width="134" Click="EditTenantButton_Click"/>
                    <Button Content="🗑️ Удалить" Style="{StaticResource ActionButtonStyle}" Width="100" RenderTransformOrigin="0.5,0.5" Click="DeleteTenantButton_Click"/>
                </StackPanel>

                <Grid Margin="20,10,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1" >
                        <StackPanel>
                            <TextBlock Text="Всего клиентов" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="TotalClientsText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Активные арендаторы" FontSize="12" Foreground="#2A6FDB"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Юр. лица" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="CompanyClientsText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="CompanyPercentText" Text="0% от общего числа" FontSize="12" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ИП и физ. лица" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="IndividualClientsText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="IndividualPercentText" Text="0% от общего числа" FontSize="12" Foreground="Purple"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <StackPanel Margin="20,10,20,10">
                    <TextBlock Text="Поиск"/>
                    <TextBox x:Name="TenantSearchBox" Height="44" TextChanged="TenantSearchBox_TextChanged"/>
                </StackPanel>

                <DataGrid x:Name="TenantsGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TenantID}" Width="60"/>
                        <DataGridTextColumn Header="Название / ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Юр. адрес" Binding="{Binding LegalAddress}" Width="250"/>
                        <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="120"/>
                        <DataGridTextColumn Header="Директор" Binding="{Binding DirectorName}" Width="200"/>
                        <DataGridTextColumn Header="Заметки" Binding="{Binding Notes}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Договоры -->
            <StackPanel x:Name="ContractsPanel" Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="20,0,20,20" Height="62">
                    <TextBlock Text="📄 Управление договорами" FontSize="24" FontWeight="Bold" Margin="20,10,0,0" Width="450"/>
                    <Button Content="Формирование отчетов" Width="159" Margin="280,0,0,0" Height="32" Click="Otchty_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="20,0,20,20">
                    <Button Content="📝 Новый договор"  Style="{StaticResource ActionButtonStyle}" Width="150" Click="AddContract_Click"/>
                    <Button Content="✏️ Редактировать"  Style="{StaticResource ActionButtonStyle}" Width="150" Click="EditContract_Click" />
                    <Button Content="🗑️ Удалить"  Style="{StaticResource ActionButtonStyle}" Width="150" Click="DeleteContract_Click" />
                </StackPanel>

                <Grid Margin="20,10,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Всего договоров" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="TotalContractsText" Text="0" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="ActiveContractsText" Text="Активные" FontSize="12" Foreground="#2A6FDB"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Договоры по статусам" FontSize="14" Foreground="#555"/>
                            <StackPanel x:Name="ContractStatusesPanel" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="15" Margin="8" BorderBrush="#D0D0D0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Истекающие в 30 дней" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="ExpiringContractsText" FontSize="30" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Договоров истекает в ближайший месяц" FontSize="12" Foreground="Orange"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <StackPanel Margin="20,0,20,10">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Поиск по номеру / объекту / клиенту" FontSize="12" Margin="0,0,0,3"/>
                            <TextBox x:Name="ContractsSearchBox" Width="750" Height="40" TextChanged="ContractsFilters_Changed"/>
                        </StackPanel>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Статус" FontSize="12" Margin="0,0,0,3"/>
                            <ComboBox x:Name="ContractStatusFilter" Width="180" Height="32" SelectionChanged="ContractsFilters_Changed">
                                <ComboBoxItem Content="Все" IsSelected="True"/>
                                <ComboBoxItem Content="Активные"/>
                                <ComboBoxItem Content="Завершённые"/>
                                <ComboBoxItem Content="Истекают скоро"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <DataGrid x:Name="ContractsGrid" Margin="20" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ContractID}" Width="60"/>
                        <DataGridTextColumn Header="№" Binding="{Binding ContractNumber}" Width="100"/>
                        <DataGridTextColumn Header="Объект" Binding="{Binding Realty.Address}" Width="220"/>
                        <DataGridTextColumn Header="Арендатор" Binding="{Binding Tenants.FullName}" Width="220"/>
                        <DataGridTextColumn Header="Начало" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                        <DataGridTextColumn Header="Окончание" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
                        <DataGridTextColumn Header="Аренда ₽" Binding="{Binding MonthlyRent}" Width="120"/>
                        <DataGridTextColumn Header="Депозит ₽" Binding="{Binding Deposit}" Width="120"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding ContractStatuses.StatusName}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Собственники -->
            <StackPanel x:Name="OwnersPanel" Visibility="Collapsed">
                <TextBlock Text="🏠 Управление собственниками" FontSize="24" FontWeight="Bold" Margin="20,10,20,20"/>

                <StackPanel Orientation="Horizontal" Margin="20,0,20,20">
                    <Button Content="➕ Добавить собственника" Style="{StaticResource ActionButtonStyle}" Click="AddOwnerButton_Click" Width="180"/>
                    <Button Content="✏️ Редактировать" Style="{StaticResource ActionButtonStyle}" Click="EditOwnerButton_Click"  Width="150"/>
                    <Button Content="🗑 Удалить" Click="DeleteOwner_Click" Style="{StaticResource ActionButtonStyle}" Width="150"/>
                </StackPanel>

                <UniformGrid Rows="1" Columns="3" Margin="0,0,0,20">
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Всего собственников" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="TotalOwnersText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Активные записи" FontSize="12" Foreground="#2A6FDB" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Объектов на собственниках" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="TotalOwnerRealtyText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Все связанные объекты" FontSize="12" Foreground="Green" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Среднее кол-во объектов" FontSize="14" Foreground="#555"/>
                            <TextBlock x:Name="AvgRealtyPerOwnerText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Среднее значение" FontSize="12" Foreground="DarkOrange" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <StackPanel Margin="20,10,20,10">
                    <TextBlock Text="Поиск"/>
                    <TextBox x:Name="OwnerSearchBox" Height="44" TextChanged="OwnerSearchBox_TextChanged"/>
                </StackPanel>

                <DataGrid x:Name="OwnersGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding OwnerID}" Width="60"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                        <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="120"/>
                        <DataGridTextColumn Header="Банк. реквизиты" Binding="{Binding BankDetails}" Width="200"/>
                        <DataGridTextColumn Header="Заметки" Binding="{Binding Notes}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
