<Window x:Class="KPn.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Авторизация" Height="500" Width="400" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Border Background="White" CornerRadius="5" Margin="20">
        <Border.Effect>
            <DropShadowEffect x:Name="GlowEffect" BlurRadius="60"   ShadowDepth="0"  Color="#0078D4"  Opacity="0.7"/>
        </Border.Effect>

        <Grid>
            <Border Height="30"  Background="Transparent"  VerticalAlignment="Top" MouseDown="TopPanel_MouseDown" Cursor="SizeAll">

                <Grid>
                    <Button x:Name="btnClose"  Content="×" Width="38" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" BorderThickness="0"
                     Foreground="Gray" FontSize="24" FontWeight="Bold" Click="BtnClose_Click" Cursor="Hand" Margin="319,0,0,0"/>
                </Grid>
            </Border>

            <StackPanel Margin="20" VerticalAlignment="Center">

                <TextBlock Text="CKnova"  FontSize="28" FontWeight="Bold" Foreground="#2E86AB" Height="42"/>

                <TextBlock Text="Система управления арендой недвижимости"  FontSize="14"  Foreground="#666666"  HorizontalAlignment="Center"  TextAlignment="Center" Margin="0,0,0,40" Height="31"/>
                <TextBlock Text="Логин"  FontSize="16"  FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,8"/>

                <TextBox x:Name="txtLogin" FontSize="14" Height="40" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" VerticalContentAlignment="Center" Foreground="#999999">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation To="2"  Duration="0:0:0.2" Storyboard.TargetProperty="BorderThickness"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation To="1"  Duration="0:0:0.2" Storyboard.TargetProperty="BorderThickness"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                    <Setter Property="BorderBrush" Value="#2E86AB"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Пароль"  FontSize="16"  FontWeight="SemiBold"  Foreground="#333333"  Margin="0,20,0,8"/>

                <PasswordBox x:Name="txtPassword"  FontSize="14"   Height="40"   Background="#F8F9FA" BorderBrush="#E0E0E0"  BorderThickness="1"  Padding="10"  VerticalContentAlignment="Center">
                    <PasswordBox.Style>
                        <Style TargetType="{x:Type PasswordBox}">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation To="2"   Duration="0:0:0.2"  Storyboard.TargetProperty="BorderThickness"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation To="1"  Duration="0:0:0.2"  Storyboard.TargetProperty="BorderThickness"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                    <Setter Property="BorderBrush" Value="#2E86AB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <Button x:Name="btnLogin"  Content="Войти в систему"  Click="BtnLogin_Click"  Height="45" FontSize="16"  FontWeight="Bold" Background="#2E86AB"  Foreground="White" BorderThickness="0"
                        Margin="0,40,0,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1B6B93"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

