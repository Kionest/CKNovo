<Window x:Class="KPn.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" FontSize="14" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" FontSize="14" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Войти" Click="BtnLogin_Click" Height="30" FontSize="14" Background="#0078D4" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>

