<Window x:Class="KPn.TenantAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Добавить клиента" Height="600" Width="400">

    <StackPanel Margin="20">

        <TextBlock Text="Клиент" Style="{StaticResource SectionTitle}"/>
        
        <TextBlock Text="Название / ФИО"/>
        <TextBox x:Name="FullNameBox" Margin="0,0,0,10"/>

        <TextBlock Text="Телефон"/>
        <TextBox x:Name="PhoneBox" Margin="0,0,0,10"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>

        <TextBlock Text="Юридический адрес"/>
        <TextBox x:Name="AddressBox" Margin="0,0,0,10"/>

        <TextBlock Text="ИНН"/>
        <TextBox x:Name="InnBox" Margin="0,0,0,10"/>

        <TextBlock Text="Директор"/>
        <TextBox x:Name="DirectorBox" Margin="0,0,0,10"/>

        <TextBlock Text="Заметки"/>
        <TextBox x:Name="NotesBox" Margin="0,0,0,10"/>

        <Canvas>
            <Button Content="Сохранить" Width="162" HorizontalAlignment="Left" Click="Save_Click" Canvas.Left="17" Canvas.Top="19" Height="37"/>
            <Button Content="Отмена" Width="162" Click="CancelButton_Click" Canvas.Left="195" Canvas.Top="19" Height="37" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Canvas>
    </StackPanel>
</Window>
    
    
