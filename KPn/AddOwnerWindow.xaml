<Window x:Class="KPn.AddOwnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPn"
        mc:Ignorable="d"
        Title="Добавить собственника" Height="590" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="#F7F7F7" Margin="10">
        <StackPanel Margin="10">

            <TextBlock Text="Добавление собственника" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="ФИО"/>
            <TextBox x:Name="FullNameBox" Height="32"/>

            <TextBlock Text="Телефон"/>
            <TextBox x:Name="PhoneBox" Height="32"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Height="32"/>

            <TextBlock Text="Адрес"/>
            <TextBox x:Name="AddressBox" Height="32"/>

            <TextBlock Text="ИНН"/>
            <TextBox x:Name="INNBox" Height="32"/>

            <TextBlock Text="Банковские реквизиты"/>
            <TextBox x:Name="BankBox" Height="32"/>

            <TextBlock Text="Заметки"/>
            <TextBox x:Name="NotesBox" Height="60" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Сохранить" Width="120" Height="36" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="100" Height="36" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
